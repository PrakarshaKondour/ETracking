{
    "dashboard": {
        "title": "ETracking - Admin Dashboard",
        "tags": [
            "etracking",
            "admin"
        ],
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "Total Orders Over Time",
                "type": "graph",
                "gridPos": {
                    "x": 0,
                    "y": 0,
                    "w": 12,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "etracking_orders_total",
                        "legendFormat": "Total Orders"
                    }
                ]
            },
            {
                "id": 2,
                "title": "Total Revenue",
                "type": "graph",
                "gridPos": {
                    "x": 12,
                    "y": 0,
                    "w": 12,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "etracking_revenue_total",
                        "legendFormat": "Total Revenue"
                    }
                ]
            },
            {
                "id": 3,
                "title": "Orders by Status",
                "type": "piechart",
                "gridPos": {
                    "x": 0,
                    "y": 8,
                    "w": 8,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "etracking_orders_by_status",
                        "legendFormat": "{{status}}"
                    }
                ]
            },
            {
                "id": 4,
                "title": "Orders by Vendor",
                "type": "bargauge",
                "gridPos": {
                    "x": 8,
                    "y": 8,
                    "w": 8,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "topk(10, etracking_orders_by_vendor)",
                        "legendFormat": "{{vendor}}"
                    }
                ]
            },
            {
                "id": 5,
                "title": "Revenue by Vendor",
                "type": "bargauge",
                "gridPos": {
                    "x": 16,
                    "y": 8,
                    "w": 8,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "topk(10, etracking_revenue_by_vendor)",
                        "legendFormat": "{{vendor}}"
                    }
                ]
            },
            {
                "id": 6,
                "title": "HTTP Request Rate",
                "type": "graph",
                "gridPos": {
                    "x": 0,
                    "y": 16,
                    "w": 12,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "rate(http_requests_total[5m])",
                        "legendFormat": "{{method}} {{route}}"
                    }
                ]
            },
            {
                "id": 7,
                "title": "HTTP Request Duration (95th percentile)",
                "type": "graph",
                "gridPos": {
                    "x": 12,
                    "y": 16,
                    "w": 12,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
                        "legendFormat": "{{method}} {{route}}"
                    }
                ]
            }
        ],
        "refresh": "30s",
        "time": {
            "from": "now-6h",
            "to": "now"
        },
        "timepicker": {
            "refresh_intervals": [
                "10s",
                "30s",
                "1m",
                "5m",
                "15m",
                "30m",
                "1h"
            ]
        }
    }
}