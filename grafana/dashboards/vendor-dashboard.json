{
    "dashboard": {
        "title": "ETracking - Vendor Dashboard",
        "tags": [
            "etracking",
            "vendor"
        ],
        "timezone": "browser",
        "templating": {
            "list": [
                {
                    "name": "vendor",
                    "type": "query",
                    "query": "label_values(etracking_orders_by_vendor, vendor)",
                    "current": {
                        "text": "All",
                        "value": "$__all"
                    },
                    "includeAll": true
                }
            ]
        },
        "panels": [
            {
                "id": 1,
                "title": "My Orders Over Time",
                "type": "graph",
                "gridPos": {
                    "x": 0,
                    "y": 0,
                    "w": 12,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "etracking_orders_by_vendor{vendor=\"$vendor\"}",
                        "legendFormat": "Orders"
                    }
                ]
            },
            {
                "id": 2,
                "title": "My Revenue",
                "type": "graph",
                "gridPos": {
                    "x": 12,
                    "y": 0,
                    "w": 12,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "etracking_revenue_by_vendor{vendor=\"$vendor\"}",
                        "legendFormat": "Revenue"
                    }
                ]
            },
            {
                "id": 3,
                "title": "Order Status Distribution",
                "type": "piechart",
                "gridPos": {
                    "x": 0,
                    "y": 8,
                    "w": 12,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "etracking_orders_by_status",
                        "legendFormat": "{{status}}"
                    }
                ]
            },
            {
                "id": 4,
                "title": "Average Order Value",
                "type": "stat",
                "gridPos": {
                    "x": 12,
                    "y": 8,
                    "w": 6,
                    "h": 4
                },
                "targets": [
                    {
                        "expr": "etracking_revenue_by_vendor{vendor=\"$vendor\"} / etracking_orders_by_vendor{vendor=\"$vendor\"}",
                        "legendFormat": "Avg Order Value"
                    }
                ]
            },
            {
                "id": 5,
                "title": "Total Orders",
                "type": "stat",
                "gridPos": {
                    "x": 18,
                    "y": 8,
                    "w": 6,
                    "h": 4
                },
                "targets": [
                    {
                        "expr": "etracking_orders_by_vendor{vendor=\"$vendor\"}",
                        "legendFormat": "Total Orders"
                    }
                ]
            }
        ],
        "refresh": "30s",
        "time": {
            "from": "now-24h",
            "to": "now"
        },
        "timepicker": {
            "refresh_intervals": [
                "10s",
                "30s",
                "1m",
                "5m",
                "15m",
                "30m",
                "1h"
            ]
        }
    }
}